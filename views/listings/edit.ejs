<%  layout("/layouts/boilerplate")%>
<div class="row mt-3">
    <div class="col-8 offset-2">
    
    <h3>EDIT YOUR LISTING </h3>
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT">
        <div class="mb-3">
            <lable for="title" class="form-label">Title</lable>
            <input type="text" name="listing[title]" value="<%=listing.title  %>" class="form-control"><br/><br>
        </div>
        <div class="mb-3">
            <lable for="description" class="form-label">Description</lable>
            <input type="text" name="listing[description]" value="<%= listing.Description %>"class="form-control" ><br><br>
        </div>
        <div class="mb-3">
            <lable for="price" class="form-label">Price</lable>
            <input type="number" name="listing[price]" value="<%= listing.Price %>" class="form-control"><br><br>

        </div>
        <div class="mb-3">
            <lable for="location" class="form-label">Location</lable>
            <input type="text" name="listing[location]" value="<%= listing.Location %>" class="form-control"><br><br>
        </div>
        <div>
            <lable for="country" class="form-label">Country</lable>
            <input type="text" name="listing[country]" value="<%= listing.Country %>" class="form-control"><br><br>
            </div>  
         <div>
            <lable for="listingimage" class="form-label">Image URL</lable>
            <input type="text" name="listing[listingimage]" value="<%= listing.imageURL %>" class="form-control"><br><br>
         </div>   
        <br><br>
        <button class="btn btn-dark edit-btn mt-3">EDIT</button>
         </div>
        </div>
    </div>

    </form>